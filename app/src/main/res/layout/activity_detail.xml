<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="mvm"
                  type="com.carlostorres.movieapp.viewmodel.MovieViewModel"/>
    </data>
    <LinearLayout
        android:id="@+id/detail_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.carlostorres.movieapp.view.DetailActivity">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="12345"
            android:layout_marginBottom="2dp"
            android:textSize="28sp"
            android:textStyle="bold"
            android:text="@{mvm.getTitle()}"/>
        <TextView
            android:id="@+id/tagline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="12345"
            android:layout_marginBottom="2dp"
            android:textSize="22sp"
            android:text="@{mvm.getTagline()}"/>
        <TextView
            android:id="@+id/idMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Star Wars"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="@android:color/darker_gray"
            android:text="@{mvm.getIdMovie()}"/>
        <TextView
            android:id="@+id/voteAverage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Star Wars"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="@android:color/darker_gray"
            android:text="@{mvm.getVoteAverage()}"/>
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Star Wars"
            android:layout_marginBottom="5dp"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textColor="@android:color/darker_gray"
            android:text="@{mvm.getStatus()}"/>
        <TextView
            android:id="@+id/dateDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="20sp"
            android:textStyle="italic"
            android:text="@{mvm.getDate()}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/overview"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                tools:text="overview"
                android:layout_marginBottom="5dp"
                android:textSize="18sp"
                android:text="@{mvm.getOverview()}"/>

            <ImageView
                android:id="@+id/poster"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                bind:imageUrl="@{mvm.getPoster()}"
                android:layout_margin="5dp"/>
        </LinearLayout>
    </LinearLayout>
</layout>